{
    "extends": [
        "airbnb",
        "prettier",
        "plugin:node/recommended"
    ],
    "plugins": [
        "prettier"
    ],
    "rules": {
        "prettier/prettier": "error",
        "no-unused-vars": "warn",
        "no-console": "off",
        "func-names": "off",
        "no-process-exit": "off",
        "object-shorthand": "off",
        "class-methods-use-this": "off",
        "no-await-in-loop": "off",
        "no-plusplus": "off",
        "no-return-await": "off",
        "no-restricted-globals": "off"
    },
    "env": {
        "jest": true,
        "browser": true,
        "es6": true
    }
}
